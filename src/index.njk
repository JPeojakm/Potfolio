{% extends '_templates/base.njk' %}

{% block content %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4 col-lg-4 d-flex align-items-center justify-content-center">
      <img src="img/JP.JPG" alt="Jinpeng Li" class="img-fluid" style="max-width: 70%;">
    </div>
    <div class="col col-md-8 col-lg-8">
      <div class="intro">
        <h1>Hi, I'm Jinpeng Li.</h1>
        <p>
          I tell visual stories through interaction design, maps, and code. I run a 
          <a href="https://theabacus.substack.com/" class="link">newsletter</a> 
          that observes the AI industry in Asia. Based in Austin, TX, you can reach me at jp.li at theabacus.news.
        </p>
        <p>
          <span class="badge longhorn">Newsman 🕵️</span>
          <span class="badge data-journalism">Data Viz 🎨</span>
          <span class="badge cooking">AI + Journalism 🤖️</span>
        </p>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <!-- Project Portfolio Title and Divider -->
  <div class="text-center mt-4 mb-4">
    <hr> <!-- This is the dividing line -->
  </div>

  <!-- Interaction Design Sections -->
 <div class="content-container" style="display: flex;">
  <!-- Project Sections Container -->
  <div class="section-container" style="flex: 0 1 70%;">
    {% for section in index.sections %}
    <div class="section">
      <div class="container">
        <div class="row align-items-center">
          <!-- Left: Image Area -->
          <div class="col-md-6">
            <div class="image-container">
              <img src="img/musicapp_img/{{ section.imagePath }}" alt="{{ section.imageAlt }}" class="project-image">
            </div>
          </div>
          <!-- Right: Text Area -->
          <div class="col-md-6">
            <div class="text-container">
              <p class="tags">{{ section.tags }}</p>
              <a href="{{ section.caseLink }}" class="title-link"><h2>{{ section.title }}</h2></a>
            </div>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
  <!-- Right-Side Space (Empty or for additional content) -->
  <div class="right-space">
    <!-- Content for the right side or leave empty for space -->
  </div>
</div>
{% endblock %}
