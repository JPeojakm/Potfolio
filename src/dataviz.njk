{% extends '_templates/base.njk' %}

{% block page_title %}Data Viz{% endblock %}

{% block page_description %}Recently visualization works.{% endblock %}

{% block content %}
<div class="container">
  <div class="row">
    <div class="col">
      <h1>Data Viz</h1>
      <p> I use Svelte.js, R to make visualizations. </p>

      <div class="container-fluid">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
          {% for map in portfolio.dataviz %}
          <div class="col">
            <div class="card h-90 border">
              <img src="img/maps-photo/{{ map.image }}.jpg" class="card-img-top" alt="{{ map.title }}">
              <div class="card-body">
                <h5 class="card-title">
                   <a href="dataviz/{{ dataviz.slug }}.html">{{ dataviz.title }}</a>
                </h5>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}