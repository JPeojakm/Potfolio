{% extends '_templates/base.njk' %}

{% block page_title %}Writing{% endblock %}

{% block page_description %}Some story for Reporting Texas.{% endblock %}

{% block content %}
<div class="container">
  <h1>Writings</h1>
  <p>I reported consumer and EV for Caixin and Yicai media.</p>

    <div class="container-fluid">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
      {% for writing in home.writing %}
      <div class="col">
        <div class="hover-card">
          <img src="img/writing-photo/{{ writing.image }}" class="card-img" alt="{{ writing.title }}">
          <div class="overlay">
            <div class="text">
              <h5>{{ writing.title }}</h5>
              <a href="{{ writing.source }}" class="btn btn-success">Read More</a>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
