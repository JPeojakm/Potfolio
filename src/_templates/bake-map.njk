{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% from '_macros/prose.njk' import prose %} {# Import the prose macro #}

{% block page_title %}{{ title }}{% endblock %}

{% block page_description %}{{ title }} by {{ label }}{% endblock %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4">
      <img src="{{ relative_path }}img/maps-photo/{{ image }}.jpg" alt="{{ slug }}" class="img-fluid mb-4">
    </div>
    <div class="col-sm-8">
      <h1>{{ title }}</h1>
      {{ prose(description) }} 
    </div>
  </div>
</article>

{% endblock %}

